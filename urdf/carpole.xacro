<?xml version='1.0'?>
<robot name="carpole" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find carpole)/urdf/carpole.gazebo" />
  <link name="world"/>

  <joint name="fixed" type="fixed">
    <parent link="world"/>
    <child link="base_rail"/>
  </joint>

  <!-- rail link -->
  <link name="base_rail">
    <collision>
      <origin xyz="0 0 1.0" rpy="0 0 0"/>
      <geometry>
        <box size="1.0 0.04 0.04"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 1.0" rpy="0 0 0"/>
      <geometry>
        <box size="1.0 0.04 0.04"/>
      </geometry>
      <material name="orange"/>
    </visual>

    <inertial>
      <origin xyz="0.5 0.02 0.02" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia
        ixx="1.0" ixy="1.0" ixz="1.0"
        iyy="1.0" iyz="1.0"
        izz="1.0"/>
    </inertial>
  </link>

  <!-- car link -->
  <link name="car">
    <collision>
      <origin xyz="0 0 1.045" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.08 0.05"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 1.045" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.08 0.05"/>
      </geometry>
      <material name="orange"/>
    </visual>

    <inertial>
      <origin xyz="0 0 1.045" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia
        ixx="1.0" ixy="1.0" ixz="1.0"
        iyy="1.0" iyz="1.0"
        izz="1.0"/>
    </inertial>
  </link>

  <joint name="carsld" type="prismatic">
    <parent link="base_rail"/>
    <child link="car"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.4"
         upper="0.4"
         effort="1000.0"
         velocity="1005.0" />
  </joint>


  <!-- pendu link -->
  <link name="bar">
    <collision>
      <origin xyz="0.3 -0.005 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.6 0.01 0.01"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0.3 -0.005 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.6 0.01 0.01"/>
      </geometry>
      <material name="orange"/>
    </visual>

    <inertial>
      <origin xyz="0.6 -0.005 0.005" rpy="0 0 0"/>
      <mass value="0.000001"/>
      <inertia
        ixx="0.000001" ixy="0.0" ixz="0.0"
        iyy="0.000001" iyz="0.0"
        izz="0.000001"/>
    </inertial>
  </link>

  <joint name="bar_car" type="continuous">
    <parent link="car"/>
    <child link="bar"/>
    <origin xyz="0.0 -0.04 1.045" rpy="0 0 0"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="1000.0" velocity="1005.0" />
  </joint>

  <!-- <joint name="bar_car" type="fixed">
    <parent link="world"/>
    <child link="bar"/>
  </joint> -->
  <!-- end mass -->
  <link name="mass">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <material name="orange"/>
    </visual>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia
        ixx="0.0004" ixy="0" ixz="0"
        iyy="0.0004" iyz="0"
        izz="0.0004"/>
    </inertial>
  </link>


  <joint name="bar_mass" type="fixed">
    <parent link="bar"/>
    <child link="mass"/>
    <origin xyz="0.575 -0.005 0" rpy="0 0 0"/>
  </joint>

  <!-- transmission for the car on the linear rail  -->
  <transmission name="linear_rail">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="carsld">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="motor1">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>



</robot>
